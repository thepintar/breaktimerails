<div class = "header-spacer"></div>
<div class = "timer-container">
  <div id = "timer-block"> 
  <div class="center-text">Create a new Timebox!</div>
   <p class="flash">
      <%= flash.notice %>
  </p>
  	<%= form_for @timebox, :html => {:id => 'timer-selector' } do |f| %>
  	<%= f.label "Work block time:" %>
  	<%= f.select :work_block_time, [1, 5, 10, 15 , 20] %><br>
  	<%= f.label "Break block time:" %>
  	<%= f.select :break_block_time, [1,5, 10, 15 , 20] %><br>
  	<%= f.label "Activity:" %>
      <% if current_user %>
        <%= collection_select(:timebox, :activity_id, current_user.favorite_activities, :id, :name, prompt: true) %>
      <% else %>
        <%= collection_select(:timebox, :activity_id, Activity.limit(5), :id, :activity_name, prompt: true) %>
      <% end %><br>

    <br>
    <%= link_to "Customize activities", activities_path  %><br>
    <%= f.submit %>
  <% end %>
  </div>
</div>
</div>